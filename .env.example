# ===========================================
# ClawForge Marketplace - Environment Variables
# Copy this file to .env.local and fill in the values
# ===========================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Upstash Redis (rate limiting - optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# VirusTotal (optional)
VIRUSTOTAL_API_KEY=

# Admin promotion secret
ADMIN_SECRET_KEY=your-admin-secret-key

# n8n (automation)
N8N_URL=http://your-vps-ip:5678
N8N_EMAIL=your-n8n-email@example.com
N8N_PASSWORD=your-n8n-password
N8N_API_KEY=your-n8n-api-key
N8N_WORKFLOW_PAYMENT_REMINDERS=your-workflow-id
N8N_SMTP_CREDENTIAL_ID=your-smtp-credential-id
